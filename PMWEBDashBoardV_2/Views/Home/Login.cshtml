@model PMWEBDashBoardV_2.Models.LoginVM

@{
    ViewBag.Title = "PMWEB";
    Layout = null;// "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>PMWEB</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- <link rel="stylesheet/less" href="style.less" type="text/css" media="screen"/> -->
    <!-- <script src="less-1.7.0.min.js" type="text/javascript"></script> -->
    <!-- js library files -->

    <link rel="stylesheet" href="@Url.Content("~/Content/login/css/rtl.min.css")" media="screen" title="no title" />
    <link rel="stylesheet" href="@Url.Content("~/Content/login/css/style.css")" media="screen" title="no title" />
    <link rel="stylesheet" href="@Url.Content("~/Content/login/css/modify.css")" media="screen" title="no title" />
    <link rel="stylesheet" href="@Url.Content("~/Content/login/css/datepicker.css")" media="screen" title="no title" />

    <script src="@Url.Content("~/Content/login/js/jquery.min.js")"></script>
    <script src="@Url.Content("~/Content/login/js/bootstrap.js")"></script>
    <script src="@Url.Content("~/Content/login/js/bootstrap-datetimepicker.js")"></script>

    <style>
        .validationElement {
            border: 1px solid red;
        }

        .validationMessage {
            color: red;
            font-size: 9px;
        }

        .textbox {
            padding-top: 0px;
        }
    </style>

</head>


<body class="right-to-left ">
    <div>
        @using (Html.BeginForm("LogOn", "Home", FormMethod.Post))
        {
            <center>
                <div class="container">
                    <div class="row login">
                        <div class="col-xs-12 col-sm-12" style="background-color: #; height: 297px"></div>
                        <div class="col-xs-12 col-sm-12">
                            <div class="row">
                                <div class="col-xs-5 col-sm-5"></div>
                                <div class="col-xs-4 col-sm-4">
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-12">
                                            @Html.TextBoxFor(model => model.LoggedUser.UserName, new { @class = "form-control login-input-sm", type = "text", placeholder = "اسم المستخدم" })
                                        </div>
                                        <div class="col-xs-12 col-sm-12">
                                            @Html.PasswordFor(model => model.SysPassword, new { @class = "form-control login-input-sm", type = "password", placeholder = "كلمة السر  " })
                                        </div>
                                        <div class="col-xs-12 col-sm-12">
                                            <a href="#">
                                                <button class="btn radius " style="background-color:#016773; color:#fff ">تسجيل دخول</button>
                                            </a>
                                        </div>
                                    </div>


                                </div>
                                <div class="col-xs-3 col-sm-3"></div>
                            </div>
                        </div>
                    </div>
                    @if (Model != null && Model.ValideMessage != null && Model.ValideMessage != "")
                    {
                        <div class="row">
                            <div class="col-sm-12 center">
                                <div class="span well text-error">
                                    @Html.DisplayFor(model => model.ValideMessage, new { @class = "form-control input-xs", style = "color:red;" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </center>
        }
    </div>

    <div id="NotificationModel" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel"></h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <label id="MessageLabel" class="center blue">
                                @if (TempData["Message"] != null)
                                {
                                    @TempData["Message"]
                                }
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">متابعة</button>
                </div>
                @if (TempData["Message"] != null)
                {
                    <script>
                        $(document).ready(function () {
                            $('#NotificationModel').modal('show');
                        });
                    </script>
                }
            </div>
        </div>
    </div>
</body>
</html>
